<div class="padding-global padding-section-medium">
          <div class="container-large">
            <div class="product_component">
              <div id="w-node-f727b04f-0fb7-b1ec-5db9-c7264e4cbfb1-4e4cbfad" class="product_heading-wrapper">
                <div class="product_heading">
                  <div class="max-width-large">
                    <h2 class="heading-style-h2">
{{ section.settings.text_heading }}
</h2>
                  </div>
                </div>
                <div class="product_button-row hide-mobile-landscape">
                  <a href="{{ section.settings.url_button_link }}" class="button w-button"> {{ section.settings.text_button_text }} </a>
                </div>
              </div>
              <div class="product_list-wrapper w-dyn-list">
                <div role="list" class="product_list w-dyn-items">
                  {% for product in section.settings.collection_collection.products limit: section.settings.collection_collection_limit %}
<div role="listitem" class="product_list-item w-dyn-item">
    
                    
    {% render 'product_item', product: product %}
    
                  
</div>
{% endfor %}
                </div>
                <div class="hide w-dyn-empty">
                  <div>No items found.</div>
                </div>
              </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Featured products",
    "class": "section_product",
    "settings": [
        {
            "id": "text_heading",
            "type": "text",
            "label": "Heading",
            "default": "Short heading here"
        },
        {
            "id": "url_button_link",
            "type": "url",
            "label": "Button-Link"
        },
        {
            "id": "text_button_text",
            "type": "text",
            "label": "Button-Text",
            "default": "All products"
        },
        {
            "id": "collection_collection",
            "type": "collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "collection_collection_limit",
            "min": 1,
            "max": 99,
            "step": 1,
            "label": "Limit: Collection",
            "default": 6
        }
    ],
    "presets": [
        {
            "name": "Featured products",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}